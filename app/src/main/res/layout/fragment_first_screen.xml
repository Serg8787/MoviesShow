<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.screens.FirstScreenFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvLetsSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Давайте поговорим"
        android:layout_margin="50dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvLetsSpeak"
        android:layout_margin="30dp"
        android:textSize="20sp"
        android:text="База данных фильмов (TMDB) - это база данных фильмов и телепрограмм, созданная сообществом. Все данные были добавлены нашим удивительным сообществом с 2008 года. Сильная международная направленность и объем данных TMDb во многом не имеют себе равных, и мы невероятно гордимся этим. Проще говоря, мы живем и дышим сообществом, и именно это нас отличает."/>

    <Button
        android:id="@+id/btNextFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>